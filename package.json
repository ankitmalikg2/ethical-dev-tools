{
  "name": "ethical-dev-tools",
  "displayName": "Ethical Dev Tools: Diff Checker, Base64 Encoder Decoder, YAML Validator, JWT & Epoch Tools",
  "description": "Essential developer utilities for VS Code: side-by-side diff viewer, Base64 encoder/decoder, YAML validator, and JWT Tool for creating, decoding, and verifying JSON Web Tokens. Boost productivity with file comparison, encoding utilities, YAML syntax validation, and secure JWT workflows.",
  "version": "0.0.5",
  "publisher": "AnkitMalikTools",
  "icon": "media/ethical-dev-tools.png",
  "homepage": "https://github.com/ankitmalikg2/ethical-dev-tools",
  "bugs": {
    "url": "https://github.com/ankitmalikg2/ethical-dev-tools/issues"
