  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ethical-dev-tools.createDiff",
        "title": "Ethical Dev Tools: Create Diff View"
      },
      {
        "command": "ethical-dev-tools.base64Tool",
        "title": "Ethical Dev Tools: Base64 Tool"
      },
      {
        "command": "ethical-dev-tools.yamlValidator",
        "title": "Ethical Dev Tools: YAML Validator"
      },
      {
        "command": "ethical-dev-tools.jwtTool",
        "title": "Ethical Dev Tools: JWT Tool"
      },
      {
        "command": "ethical-dev-tools.epochTool",
        "title": "Ethical Dev Tools: Epoch Tool"
      },
      {
        "command": "ethical-dev-tools.jsonYamlTool",
        "title": "Ethical Dev Tools: JSON <> YAML Converter"
      },
      {
        "command": "ethical-dev-tools.jsonTool",
        "title": "Ethical Dev Tools: JSON Tools"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ethical-dev-tools-sidebar",
          "title": "ETHICAL DEV",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "ethical-dev-tools-sidebar": [
        {
          "id": "ethical-dev-tools-view",
          "name": "TOOLS"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2"
  }
